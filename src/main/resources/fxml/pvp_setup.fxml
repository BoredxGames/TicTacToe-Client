                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="30.0" styleClass="nav-links">
                    <Label text="Home" />
                    <Label text="Leaderboard" />
                    <Label text="Settings" />
                    <Label text="Records" />
