                     <Insets />
                  </HBox.margin></SVGPath>
                    <Label styleClass="title-text" text=" Offline PVP" />
                </HBox>
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="subtitle-text" text="Configure players for a local match." />
            </VBox>

            <VBox prefWidth="520.0" spacing="32.0" styleClass="setup-card">
                
                <VBox spacing="24.0">
                    <VBox spacing="8.0">
                        <HBox alignment="CENTER_LEFT">
                            <Label styleClass="section-label" text="Player 1 Name" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label styleClass="badge-x" text="PLAY AS X" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" styleClass="input-container">
                            <HBox styleClass="input-icon-box">
                                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" styleClass="icon-gray" />
                            </HBox>
                            <TextField fx:id="player1Field" promptText="Enter name..." text="Hazem" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <StackPane>
                        <Region styleClass="separator-line" />
                        <Label styleClass="separator-text" text="VS" />
                    </StackPane>

                    <VBox spacing="8.0">
                        <HBox alignment="CENTER_LEFT">
                            <Label styleClass="section-label" text="Player 2 Name" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label styleClass="badge-o" text="PLAY AS O" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" styleClass="input-container">
                            <HBox styleClass="input-icon-box">
                                <SVGPath content="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" styleClass="icon-gray" />
                            </HBox>
                            <TextField fx:id="player2Field" promptText="Enter name..." HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </VBox>

                <VBox spacing="12.0">
                    <Label styleClass="section-label" text="Who goes first?" />
                    <HBox styleClass="toggle-container">
                        <fx:define>
                            <ToggleGroup fx:id="starterGroup" />
                        </fx:define>
                        <ToggleButton maxWidth="Infinity" selected="true" styleClass="toggle-button" text="Player 1 (X)" HBox.hgrow="ALWAYS">
                     <toggleGroup>
                        <ToggleGroup fx:id="starterGroup" />
                     </toggleGroup></ToggleButton>
                        <ToggleButton maxWidth="Infinity" styleClass="toggle-button" text="Player 2 (O)" toggleGroup="$starterGroup" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <VBox spacing="12.0">
                    <Button fx:id="startGameBtn" maxWidth="Infinity" styleClass="primary-button" text="Start Game">
                        <graphic>
                            <SVGPath content="M8 5v14l11-7z" style="-fx-translate-x: -4;" styleClass="icon-white" />
                        </graphic>
                    </Button>
                    <Button fx:id="backBtn" maxWidth="Infinity" styleClass="secondary-button" text="Back to Menu">
                        <graphic>
                            <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" style="-fx-translate-x: -4;" styleClass="icon-gray" />
