<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<StackPane stylesheets="@../css/features/pvp_setup.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boredxgames.tictactoeclient.presentation.Pvp_setupController">

    <AnchorPane styleClass="root">
        
        <Pane fx:id="backgroundPane" styleClass="background-blur" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
        
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" styleClass="top-bar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            <children>
                <Label fx:id="logoLabel" styleClass="logo-text" text="%pvp.logo" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox fx:id="navLinks" alignment="CENTER" spacing="30.0" styleClass="nav-links">
                 
                </HBox>
            </children>
        </HBox>

        <VBox fx:id="contentContainer" alignment="CENTER" fillWidth="false" spacing="24.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80.0">
            
            <VBox fx:id="titleContainer" alignment="CENTER" maxWidth="520.0" prefWidth="520.0" spacing="8.0">
                <HBox alignment="CENTER" spacing="16.0">
                    <SVGPath fx:id="pvpIcon" content="M10.576 2.837v26.271..." scaleX="1.2" scaleY="1.2" styleClass="icon-primary" />
                    <Label fx:id="titleLabel" styleClass="title-text" text="%pvp.title" />
                </HBox>
                <Label fx:id="subtitleLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="subtitle-text" text="%pvp.subtitle" />
            </VBox>

            <VBox fx:id="setupCard" prefWidth="520.0" spacing="32.0" styleClass="setup-card">
                
                <VBox spacing="24.0">
                    <VBox spacing="8.0">
                        <HBox alignment="CENTER_LEFT">
                            <Label fx:id="player1Label" styleClass="section-label" text="%pvp.player1.label" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="player1Badge" styleClass="badge-x" text="%pvp.player1.badge" />
                        </HBox>
                        <HBox fx:id="player1Container" alignment="CENTER_LEFT" styleClass="input-container">
                            <HBox styleClass="input-icon-box">
                                <SVGPath content="M12 12c2.21 0 4-1.79..." styleClass="icon-gray" />
                            </HBox>
                            <TextField fx:id="player1Field" promptText="%pvp.player1.prompt" text="Player 1" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>

                    <StackPane fx:id="vsSeparator">
                        <Region styleClass="separator-line" />
                        <Label fx:id="vsLabel" styleClass="separator-text" text="%pvp.vs" />
                    </StackPane>

                    <VBox spacing="8.0">
                        <HBox alignment="CENTER_LEFT">
                            <Label fx:id="player2Label" styleClass="section-label" text="%pvp.player2.label" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="player2Badge" styleClass="badge-o" text="%pvp.player2.badge" />
                        </HBox>
                        <HBox fx:id="player2Container" alignment="CENTER_LEFT" styleClass="input-container">
                            <HBox styleClass="input-icon-box">
                                <SVGPath content="M15 12c2.21 0 4-1.79..." styleClass="icon-gray" />
                            </HBox>
                            <TextField fx:id="player2Field" promptText="%pvp.player2.prompt" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </VBox>

                <VBox spacing="12.0">
                    <Label fx:id="starterLabel" styleClass="section-label" text="%pvp.starter.label" />
                    <HBox fx:id="starterToggleContainer" styleClass="toggle-container">
                        <ToggleButton fx:id="player1StarterBtn" maxWidth="Infinity" selected="true" styleClass="toggle-button" text="%pvp.starter.player1" HBox.hgrow="ALWAYS">
                             <toggleGroup>
                                <ToggleGroup fx:id="starterGroup" />
                             </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="player2StarterBtn" maxWidth="Infinity" styleClass="toggle-button" text="%pvp.starter.player2" toggleGroup="$starterGroup" HBox.hgrow="ALWAYS" />
                    </HBox>
                </VBox>

                <VBox spacing="12.0">
                    <Button fx:id="startGameBtn" onAction="#onStartGameClicked" maxWidth="Infinity" styleClass="primary-button" text="%pvp.start">
                        <graphic>
                            <SVGPath content="M8 5v14l11-7z" style="-fx-translate-x: -4;" styleClass="icon-white" />
                        </graphic>
                    </Button>
                    <Button fx:id="backBtn" onAction="#onBackClicked" maxWidth="Infinity" styleClass="secondary-button" text="%pvp.back">
                        <graphic>
                            <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" style="-fx-translate-x: -4;" styleClass="icon-gray" />
                        </graphic>                    
                    </Button>
                </VBox>

            </VBox>
        </VBox>
    </AnchorPane>
</StackPane>
