                        <StackPane VBox.vgrow="ALWAYS" styleClass="card-inner-container">

                            <Region styleClass="card-bg-image-pve" />

                            <Region styleClass="card-gradient" />

                            <StackPane styleClass="card-icon-bg" StackPane.alignment="TOP_LEFT">
                                <StackPane.margin>
