                                <padding>
                                    <Insets top="32" right="32" bottom="32" left="32"/>
                                </padding>

                                <VBox spacing="4">
                                    <Label text="Player vs CPU" styleClass="card-title">
                                        <font>
                                            <Font name="System Bold" size="28"/>
                                        </font>
                                    </Label>
                                    <Label text="Challenge the artificial intelligence" styleClass="card-description">
                                        <font>
                                            <Font size="14"/>
                                        </font>
                                    </Label>
                                </VBox>

                                <HBox alignment="CENTER_LEFT" spacing="0" styleClass="card-footer">
                                    <padding>
                                        <Insets top="16" bottom="0"/>
                                    </padding>
                                    <Label text="SINGLE PLAYER" styleClass="card-badge">
                                        <font>
                                            <Font name="System Bold" size="11"/>
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <HBox alignment="CENTER_RIGHT" spacing="4" styleClass="card-action">
                                        <Label text="Start Game" styleClass="action-text">
                                            <font>
                                                <Font name="System Bold" size="13"/>
                                            </font>
                                        </Label>
                                        <SVGPath content="M12,4l-1.41,1.41L16.17,11H4v2h12.17l-5.58,5.59L12,20l8-8L12,4z"
                                                 scaleX="0.7" scaleY="0.7"/>
                                    </HBox>
                                </HBox>
                            </VBox>
                        </StackPane>
                    </VBox>

                </HBox>

                <HBox alignment="CENTER" spacing="8" styleClass="back-button-container">
                    <Button styleClass="back-button" mnemonicParsing="false" onAction="#handleBackToMainMenu">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <SVGPath content="M20,11H7.83l5.59-5.59L12,4l-8,8l8,8l1.41-1.41L7.83,13H20V11z"
                                         scaleX="0.8" scaleY="0.8"/>
