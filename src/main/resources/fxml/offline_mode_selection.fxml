        <center>
            <VBox alignment="TOP_CENTER" spacing="40" styleClass="main-content">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <VBox alignment="CENTER" spacing="8">
                    <Label text="Select Mode" styleClass="title">
                        <font>
                            <Font name="System Bold" size="48"/>
                        </font>
                    </Label>
                    <Label text="Choose your opponent to begin the game" styleClass="subtitle">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                </VBox>

                <HBox alignment="CENTER" spacing="24" styleClass="cards-container">

                    <VBox styleClass="game-card" prefWidth="380" prefHeight="400" onMouseClicked="#handlePlayerVsPlayer">
